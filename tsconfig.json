{
	"compilerOptions": {
		"lib": [
			"es5",
			"es6",
			"esnext.asynciterable",
			"dom"
		],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"./node_modules",
		"./helm",
		"./.vscode",
		"./dist",
	],
	"include":[
		".eslintrc.js",
		"./src/**/*.ts"
	]
}
